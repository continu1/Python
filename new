import random
n = random.randint(1,100)
count = 0
flag = True
while flag :
    k = int(input("猜数字(1..100):"))
    count += 1
    if k == n :
        print("yes")
        flag = False
    elif k > n :
        print("大了")
    elif k < n :
        print("小了")
print("count:",count)


