#精度限制的同时也会进行四舍五入
n1 = 5.5
print("1)",n1)
print("n1 = %.0f\n" % n1)

n1 = 5.55
print("2)",n1)
print("n1 = %.0f" % n1)
print("n1 = %.1f\n" % n1)

n1 = 5.56
print(n1)
print("n1 = %.0f" % n1)
print("n1 = %.1f\n" % n1)

n1 = 5.555
print("3)",n1)
print("n1 = %.0f" % n1)
print("n1 = %.1f" % n1)
print("n1 = %.2f\n" % n1)


