print("abcde\tfgh\n")


i = 1
while i <= 9 :
    k = 1
    while k <= i :
        print(f"{k}*{i}={k*i}\t",end = '')
        #print("%d*%d=%-3d" % (k,i,k*i),end = '')
        k += 1
    i += 1
    print()
    #print("\n",end = '')


