print(type(bool(100)))


num = 15.8
print(num,type(num))
num = int(num)
print(num,type(num))
num = float(num)
print(num,type(num))


#  +  -  *  /  %  //  ** 
#  +=  -=  *=  /=  %=  //=  **=
#  ==  !=  >=  <=  >  <
#  bool : true false
#  and  or  not

n1 = 10;n2 = 3
print(n1 / n2)
print(n1 % n2)
print(n1 ** n2)
print(n1 // n2)


a = 1.1;b = 1.5
print(a>b,type(a > b))


a = 1;b = 2;c = 3
print(a > b and b > c)
print(a > b or b > c)
print(not a > b or b > c)


